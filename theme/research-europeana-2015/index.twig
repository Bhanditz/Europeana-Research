{% include '_header.twig' %}

{% set home = record %}

{% include '_organisms_components_site-hero.twig' %}


<!-- Start Main page content -->
<main role="main" class="pro-home">


    <div class="promo-abouteuropeana section">
        <div class="lc">

            {{ home.subtitle }}

        </div>
    </div>

<div class="section home-collections">
    <div class="lc">

    <h2 class="section-title">Collections</h2>

    <div class="grid cf">

        <div class="l-collections">
            <div class="grid">

            {% setcontent collections = "collections/latest/2" %} 
                
            {% for collection in collections -%}   
            <div class="l-post">
                <div class="block block-inset">
                    <a href="{{ collection.link }}" class="inner">
                        <div class="b-thumb">
                            <img src="{{ collection.image|thumbnail(685,470,"c") }}" alt="{{ collection.image|title }}" />
                            <div class="b-text">
                                <h2 class="headline">{{ collection.title }}</h2>
                            </div>
                        </div>
                    </a>
                    {% if collection.source is not empty %}
                    <div class="excerpt">
                        Provided by: <a href="{{ collection.source_url }}" class="external">{{ collection.source }}</a>
                    </div>
                {% endif %}
                </div>
            </div>
            {%- endfor %}
            
            </div>

            <a class="link-more" href="/collections">See all Collections</a>
        </div>

    </div>
    </div>
</div>


<div class="section home-news">
    <div class="lc">

    <h2 class="section-title">What's New</h2>

    <div class="l-news">
        {% setcontent records = "blogposts/latest/1" %}
        
        {% for record in records -%}
        <div class="block block-thumb">
            <div class="b-thumb">
                <a href="{{record.link}}"><img src="{{ record.image|thumbnail(685,470,"c") }}" alt="{{ record.image|title }}" /></a>
            </div>
            <div class="b-text">

                <h2 class="headline"><a href="{{ record.link }}">{{ record.title }}</a> </h2>

                {{ record.body|excerpt(400)}}

                <div class="item-meta-primary">
                    {# set author #}
                    {% include 'items/_item-author.twig' %}
                    {% include 'items/_item-readtime.twig' %}
                </div>

                <div class="item-meta-secondary">
                    {# set date #}
                    {% include 'items/_item-date.twig' %}
                    {# set tags #}
                    {% include 'items/_item-tags.twig' %}
                    {# set discus comments #}
                    {% include 'items/_item-comments-link.twig' %}
                </div>

                

            </div>
        </div>
        {%- endfor %}

    </div>

    <a class="link-more" href="/blogposts">More from the Research Blog</a>
        
    </div>
</div>


